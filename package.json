{
  "name": "github-webhook-bridge",
  "version": "2.0.0",
  "description": "Receive and parse GitHub Webhooks and send messages to Discord, providing a more flexible notification system with enhanced integration between GitHub and Discord.",
  "homepage": "https://github.com/book000/github-webhook-bridge",
  "bugs": {
    "url": "https://github.com/book000/github-webhook-bridge/issues"
  },
  "license": "MIT",
  "author": "Tomachi [ICHIGO] <tomachi@tomacheese.com>",
  "private": true,
  "main": "index.js",
  "repository": {
    "url": "git@github.com:book000/github-webhook-bridge.git",
    "type": "git"
  },
  "scripts": {
    "start": "tsx ./src/main.ts",
    "dev": "tsx watch ./src/main.ts",
    "vercel": "vercel dev",
    "build": "tsc -p tsconfig.json",
    "lint:prettier": "prettier --check src",
    "lint:tsc": "tsc",
    "fix:eslint": "eslint . -c eslint.config.mjs --fix",
    "fix:prettier": "prettier --write src",
    "test": "jest --runInBand --passWithNoTests --detectOpenHandles --forceExit",
    "preinstall": "npx only-allow pnpm",
    "lint": "run-z lint:prettier,lint:eslint,lint:tsc",
    "lint:eslint": "eslint . -c eslint.config.mjs",
    "fix": "run-z fix:prettier,fix:eslint"
  },
  "devDependencies": {
    "@book000/eslint-config": "1.12.11",
    "@book000/node-utils": "1.18.174",
    "@fastify/cors": "11.1.0",
    "@octokit/webhooks-examples": "7.6.1",
    "@octokit/webhooks-types": "7.6.1",
    "@types/diff": "8.0.0",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.1",
    "@vercel/node": "5.5.13",
    "axios": "1.13.2",
    "diff": "8.0.2",
    "eslint": "9.39.1",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-n": "17.23.1",
    "eslint-plugin-promise": "7.2.1",
    "fastify": "5.6.2",
    "fastify-raw-body": "5.0.0",
    "jest": "30.2.0",
    "jest-expect-message": "1.1.3",
    "jsonc-parser": "3.3.1",
    "prettier": "3.7.3",
    "run-z": "2.1.0",
    "ts-jest": "29.4.5",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "setupFilesAfterEnv": [
      "jest-expect-message"
    ]
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
